<?xml version="1.0" encoding="UTF-8"?>
<project name="module_cse210" default="compile.module.cse210">
  <dirname property="module.cse210.basedir" file="${ant.file.module_cse210}"/>
  
  <property name="module.jdk.home.cse210" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.cse210" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.cse210" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.cse210" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="cse210.output.dir" value="${module.cse210.basedir}/out/production/cse210"/>
  <property name="cse210.testoutput.dir" value="${module.cse210.basedir}/out/test/cse210"/>
  
  <path id="cse210.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="cse210.module.production.classpath">
    <path refid="${module.jdk.classpath.cse210}"/>
  </path>
  
  <path id="cse210.runtime.production.module.classpath">
    <pathelement location="${cse210.output.dir}"/>
  </path>
  
  <path id="cse210.module.classpath">
    <path refid="${module.jdk.classpath.cse210}"/>
    <pathelement location="${cse210.output.dir}"/>
  </path>
  
  <path id="cse210.runtime.module.classpath">
    <pathelement location="${cse210.testoutput.dir}"/>
    <pathelement location="${cse210.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.cse210">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.cse210">
    <patternset refid="excluded.from.module.cse210"/>
  </patternset>
  
  <path id="cse210.module.sourcepath">
    <dirset dir="${module.cse210.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.cse210" depends="compile.module.cse210.production,compile.module.cse210.tests" description="Compile module cse210"/>
  
  <target name="compile.module.cse210.production" depends="register.custom.compilers" description="Compile module cse210; production classes">
    <mkdir dir="${cse210.output.dir}"/>
    <javac2 destdir="${cse210.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.cse210}/javac">
      <compilerarg line="${compiler.args.cse210}"/>
      <bootclasspath refid="cse210.module.bootclasspath"/>
      <classpath refid="cse210.module.production.classpath"/>
      <src refid="cse210.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.cse210"/>
    </javac2>
    
    <copy todir="${cse210.output.dir}">
      <fileset dir="${module.cse210.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.cse210.tests" depends="register.custom.compilers,compile.module.cse210.production" description="compile module cse210; test classes" unless="skip.tests"/>
  
  <target name="clean.module.cse210" description="cleanup module">
    <delete dir="${cse210.output.dir}"/>
    <delete dir="${cse210.testoutput.dir}"/>
  </target>
</project>